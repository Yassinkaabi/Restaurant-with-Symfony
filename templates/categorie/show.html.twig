{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>
<div class="mt-5 mx-5">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ categorie.name }}</td>
            </tr>
            <tr>
                <th>Food Items</th>
                <td>
                    <ul style="display:flex;flex-direction:column">
                        {% for food in categorie.menuItems %}
                        {% if food %}
                        <div style="display:flex;align-items:center;gap:15px">
                        <tr>
                            <td>
                                <img src="" alt="image" />
                            </td>
                            <td>                            
                                <a style="text-decoration:none" href="{{ path('app_food_show', {'id': food.id}) }}">
                                    <li style="list-style: none;">{{ food.name }}: </li>
                                </a>
                            </td>
                            <td>
                                <span style="color:red"> {{ food.price }} Dinars</span>
                            </td>
                        </tr>
                        </div>
                        {% endif %}
                        {% else %}
                            <li> Liste vide </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
</div>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_categorie_index') }}">All categories of food</a>
    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Edit</a>
    {{ include('categorie/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
