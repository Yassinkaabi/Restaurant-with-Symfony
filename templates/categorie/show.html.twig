                                    <tr>
                                        <td><img src="{{ vich_uploader_asset(food, 'imageFile') }}" alt="image" style="max-width: 50px;" /></td>
                                        <td><a href="{{ path('app_food_show_admin', {'id': food.id}) }}">{{ food.name }}</a></td>
                                        <td><span style="color: red;">{{ food.price }} Dinars</span></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                </td>
            </tr>
        </tbody>
    </table>
</div>

{% endblock %}

