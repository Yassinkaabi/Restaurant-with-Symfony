{% block content %}

<div class="container mt-5">
    <h2>DÃ©tails du categorie</h2>

    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Nom de categorie</th>
                <td>{{ categorie.name }}</td>
            </tr>
            <tr>
                <th scope="row">Food Items</th>
                <td>
                        <table class="table">
